NAME = minishell

CC = gcc -g
#remember to use the CFLAGS at the end!!
CFLAGS = -Wall -Wextra -Werror

RM = rm -f

AF = ar rcs

SRCS = \
builtins/export.c\
builtins/env.c\
parsing/env_sh_list.c\
parsing/parseline.c\
utils/minish_utils.c\
utils/list_sh_utils.c\
pipes.c\
init_1.c\
main.c\

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
		make -C libft
		$(CC) -Llibft -lft -lreadline $(OBJS) -o $(NAME)

clean:
	$(RM) $(OBJS)
	make clean -C libft

fclean: clean
	$(RM) $(NAME)
	make fclean -C libft

re: fclean all

norminette:
	norminette $(SRCS)